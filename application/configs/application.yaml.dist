testing:
  _extends: production
  phpSettings:
    display_startup_errors: on
    display_errors: on
    error_reporting: -1
  resources:
    layout:
      layout: default/layout
    db:
      adapter: Pdo Mysql
      params:
        host: hippo.nixsolutions.com
        username: d_unittest
        password: unittest
        dbname: p_zfc_test
        persistent: on
    frontController:
      params:
        displayExceptions: on
      defaultModule: index
      plugins:
        acl:
          options:
            allowAll: off
    navigation:
      source:
        dashboard: config
        default: config
      config: navigation
      cache: navigation
development:
  _extends: production
  phpSettings:
    display_startup_errors: on
    display_errors: on
    error_reporting: -1
  resources:
    frontController:
      params:
        displayExceptions: on
      plugins:
        debug:
          class: Core_Controller_Plugin_Debug
    db:
      params:
        profiler:
          enabled: on
          class: Zend_Db_Profiler_Firebug
travis:
  _extends: testing
  resources:
    db:
      adapter: Pdo Mysql
      params:
        host: '0.0.0.0'
        username: 'travis'
        password:
        dbname: zfc_test
        persistent: on