production:
  phpSettings:
    display_startup_errors: off
    display_errors: off
    date:
      timezone: Europe/Kiev
  includePaths:
    library: APPLICATION_PATH/../library
  pluginPaths:
    Core_Application_Resource: Core/Application/Resource
  bootstrap:
    path: APPLICATION_PATH/Bootstrap.php
    class: Bootstrap
  appnamespace: Application
  autoloadernamespaces:
    - Core
  uploadDir: uploads
  resources:
    frontController:
      moduleDirectory: APPLICATION_PATH/modules
      moduleControllerDirectoryName: controllers
      defaultControllerName: index
      defaultAction: index
      defaultModule: install
      baseUrl: /
      env: APPLICATION_ENV
      params:
        prefixDefaultModule: on
        displayExceptions: off
      actionhelperpaths:
        Helper: APPLICATION_PATH/helpers
      plugins:
        acl:
          class: Core_Controller_Plugin_Acl
          stackindex: 30
          options:
            config: acl
            allowAll: on
            denied:
              module: index
              controller: error
              action: denied
            error:
              module: index
              controller: error
              action: notfound
            login:
              module: users
              controller: login
              action: index
            role: guest
            cache: acl
    router:
      config: routes
      cache: router
#    log:
#      stream:
#        writerName: Stream
#        writerParams:
#          stream: APPLICATION_PATH/../data/logs/application.log
    translate:
      locale: en
      scan: filename
      saveToDb: off
      disableNotices: on
      logUntranslated: off
      logMessage: Undefined message '%message%' in '%locale%'
      content: APPLICATION_PATH/../data/languages
    locale: on
    modules: on
    layout:
      layout: install/layout
      layoutPath: APPLICATION_PATH/layouts/scripts/
    auth: on
    registry:
      console:
        colorize: true
      opauthConfig:
        path: '/users/auth/'
        callback_url: '/users/auth/callback/'
        security_salt: 'ChangeMe'
      fbConfig:
        appId: 
        secret:
        scope: 'email,user_checkins'
      twitterConfig:
        consumerKey: 
        consumerSecret: 
      googleConfig:
        clientId:
        clientSecret:
      payments:
        gateways:
          #test keys
          paypal:
            email: 'merchant@zfcore.naxel.rhino.nixsolutions.com'
            currency: 'USD'
            #settingsInUrl: https://www.sandbox.paypal.com/us/cgi-bin/webscr?cmd=_profile-website-payments
            paypalHost: 'https://www.sandbox.paypal.com/'
        events:
          paySubscription:
            class: 'Subscriptions_Model_Subscription_Manager'
            method: 'paySubscription'
          cancelSubscription:
            class: 'Subscriptions_Model_Subscription_Manager'
            method: 'cancelSubscription'
    session:
      save_path: APPLICATION_PATH/../data/session
    mail:
      transport:
        type: Zend_Mail_Transport_Smtp
        host: localhost
        port: 25
      defaultFrom:
        email: zfc@nixsolutions.com
        name: ZFCore Webmaster
    asset:
      adapter: Core_Asset_Adapter_Simple
      packages:
        base:
          include: PUBLIC_PATH/assets/base/
          buildDir: PUBLIC_PATH/assets/base/builds/
        default:
          include: PUBLIC_PATH/assets/default/
          buildDir: PUBLIC_PATH/assets/default/builds/
          extend: base
        dashboard:
          include: PUBLIC_PATH/assets/dashboard/
          buildDir: PUBLIC_PATH/assets/dashboard/builds/
          extend: base
